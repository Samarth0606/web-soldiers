<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/star.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <section class="row">
        <div class="col-6 border">
            <h1> <%=foundProduct.name%> </h1>
            <img src="<%=foundProduct.img%>">
            <h2> <%=foundProduct.price%> </h2>
            <h5> <%=foundProduct.instock%> </h5>
            <p> <%=foundProduct.desc%> </p>
        </div>

        <div class="col-6 border">

            <form action="/products/<%=foundProduct._id%>/review" method="POST">
                <article>
                    <label for="rate">Rating:</label>
                    <!-- <input type="range" min="0" max="5" name="rating" id="rate"> -->
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                </article>
                <article>
                    <label for="bola">Comment:</label>
                    <textarea name="comment" id="bola" rows="3"></textarea>
                </article>

                <button>Add Review</button>
            </form>

            <article>
                <% for(let item of foundProduct.reviews){ %>
                    <!-- <h1>Rating: <%=item.rating%></h1> -->
                    <p class="starability-result" data-rating="<%=item.rating%>">
                        Rated: <%=item.rating%> stars
                    </p>
                    <h5>Comment: <%=item.comment%></h5>
                    <% if(item.createdAt){ %>
                        <p>Date: <%=item.createdAt.toDateString()%></p>
                    <% } %>
                <% } %>
            </article>

        </div>



    </section>

    
    
    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>